<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_crypter"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:ems="10"
        android:hint="Texte à crypter"
        android:inputType="textMultiLine|textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crypter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crypter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_crypter" />

    <Button
        android:id="@+id/btn_decrypter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Décrypter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_crypter" />

    <TextView
        android:id="@+id/tv_recevoir"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:hint="Texte à reçevoir"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_decrypter" />
</androidx.constraintlayout.widget.ConstraintLayout>